PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX schema: <http://schema.org/>
CONSTRUCT {
  ?resource1 rdf:type schema:Person.
  ?resource1 schema:address ?resource2.
  ?resource2 ?resource3 ?resource4.
}
WHERE {
  {
    SELECT * WHERE {
      ?resource1 rdf:type schema:Person;
        schema:address ?resource2.
    }
  }
  UNION
  {
    SELECT * WHERE {
      ?resource1 rdf:type schema:Person;
        schema:address ?resource2.
      ?resource2 ?resource3 ?resource4.
    }
  }
}