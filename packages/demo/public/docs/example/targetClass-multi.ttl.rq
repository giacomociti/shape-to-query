PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX schema: <http://schema.org/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
CONSTRUCT {
  ?resource1 rdf:type ?resource2.
  ?resource1 schema:name ?resource3.
}
WHERE {
  ?resource1 rdf:type ?resource2;
    schema:name ?resource3.
  VALUES ?resource2 {
    schema:Person
    foaf:Person
  }
}