PREFIX ex: <http://example.org/>
PREFIX schema: <http://schema.org/>
PREFIX tbbt: <https://tbbt.tv/>
PREFIX sh: <http://www.w3.org/ns/shacl#>

[
  a sh:NodeShape ;
  sh:targetClass schema:Person ;
  sh:property
    [
      sh:path ex:motherName ;
      sh:values
        [
          sh:nodes [ sh:path (schema:parent schema:givenName) ];
          sh:filterShape
            [
              sh:property
                [
                  sh:path schema:gender ; sh:hasValue schema:Female ;
                ] ;
            ] ;
        ] ;
    ],
    [
      sh:path ex:fatherName ;
      sh:values
        [
          sh:nodes [ sh:path (schema:parent schema:givenName) ] ;
          sh:filterShape
            [
              sh:property
                [
                  sh:path schema:gender ; sh:hasValue schema:Male ;
                ] ;
            ] ;
        ] ;
    ] ;
] .
