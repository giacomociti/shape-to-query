PREFIX schema: <http://schema.org/>
CONSTRUCT {
  ?resource1 schema:givenName ?resource2.
  ?resource1 schema:knows ?resource3.
  ?resource3 schema:givenName ?resource4.
}
WHERE {
  {
    SELECT * WHERE {
      { ?resource1 schema:givenName ?resource2. }
      UNION
      { ?resource1 schema:knows ?resource3. }
    }
  }
  UNION
  {
    SELECT * WHERE {
      ?resource1 schema:knows ?resource3.
      ?resource3 schema:givenName ?resource4.
    }
  }
}