{
  "name": "shape-to-query",
  "private": "true",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npx yarn-deduplicate",
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore",
    "test": "c8 --all --reporter=lcov mocha --recursive packages/**/*.test.ts",
    "prebuild": "npm run docs",
    "build": "yarn run --cwd=packages/demo build",
    "build:spec": "docker-compose run --rm bikeshed --allow-nonlocal-files spec",
    "docs": "find packages/demo/public -type f -name index.bs -exec yarn build:spec {} \\;",
    "docs:watch": "docker-compose run --rm --publish 8000:8000 bikeshed --allow-nonlocal-files serve",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@tpluscode/eslint-config": "^0.4.2",
    "@types/mocha": "^10.0.1",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "c8": "^7.13.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-require-extensions": "^0.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "mocha": "^10.2.0",
    "sinon-chai": "^3.7.0",
    "standard": "^17.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "yarn-deduplicate": "^6.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "mocha-setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
